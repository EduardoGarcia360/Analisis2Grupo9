@model List<Analisis2Grupo9.Models.TableModels.TicketTableModel>
@{
    ViewBag.Title = "Mis Tickets";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-12">
        <input type="button"
               class="btn btn-primary"
               onclick="document.location.href = '@Url.Content("~/UsuarioTicket/Add")'"
               value="Nuevo" />
    </div>
</div>

<br />

<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered">
            <tr>
                <th>#</th>
                <th>Solicitado</th>
                <th>Titulo</th>
                <th>Descripcion</th>
                <th>Categoria</th>
                <th>Responsable</th>
                <th>Finalizo</th>
                <th>Estado</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.IdTicket</th>
                    <th>@item.FechaSolicitud</th>
                    <th>@item.Titulo</th>
                    <th>@item.Descripcion</th>
                    <th>@item.CategoriaTicketDesc</th>
                    <th>@item.NombreEmpleadoAsignado @item.ApellidoEmpleadoAsignado</th>
                    <th></th>
                    <th>
                        @if (item.IdEstadoTicket == 1)
                        {
                            <span class="badge text-bg-primary">@item.EstadoTicketDesc</span>
                        }
                        @if (item.IdEstadoTicket == 2)
                        {
                            <span class="badge text-bg-secondary">@item.EstadoTicketDesc</span>
                        }
                    </th>
                </tr>
            }
        </table>
    </div>
</div>
