@model Analisis2Grupo9.Models.ViewModels.EditCategoriaInsumoViewModel
@{
    ViewBag.Title = "Editar Categoría Insumo";
}

<h2>@ViewBag.Title</h2>


<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Edit", "CategoriaInsumo", FormMethod.Post, new { role = "form", @class = "" }))
        {
            @Html.HiddenFor(d => d.id_categoria_insumo)
            @Html.AntiForgeryToken()

            @Html.ValidationMessage("error", new { @class = "text-danger" })

            @Html.LabelFor(d => d.codigo)
            @Html.TextBoxFor(d => d.codigo, new { @class = "form-control" })

            @Html.LabelFor(d => d.nombre)
            @Html.TextBoxFor(d => d.nombre, new { @class = "form-control" })
            <br />

            <div class="row">
                <div class="col" style="text-align:left">
                    <input type="button"
                           class="btn btn-danger"
                           onclick="document.location.href = '@Url.Content("~/CategoriaInsumo/Index")'"
                           value="Cancelar" />
                </div>
                <div class="col">
                    
                </div>
                <div class="col" style="text-align:right">
                    <input type="submit" class="btn btn-success" value="Guardar" />
                </div>
            </div>
        }
    </div>
</div>
