@model List<Analisis2Grupo9.Models.TableViewsModels.categoriaTicketTableModel>

@{
    ViewBag.Title = "Index";
}

<h2>Categorias Ticket</h2>
<div class="row">
    <div class="col-md-12">
        <input type="button" class="btn btn-primary" onclick="document.location.href = '@Url.Content("~/CatTicket/AddCat")'" value="Nuevo" />
    </div>
</div>
<br />
<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered">
            <tr>
                <td>#</td>

                <td>Codigo</td>
                <td>Nombre</td>
                <td>Acciones</td>

            </tr>
            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.IdCategoriaTicket</td>
                    <td>@oElemento.Codigo</td>
                    <td>@oElemento.Nombre</td>
                    <td>
                        <input type="button" class="btn btn-danger" onclick="document.location.href= '@Url.Content("~/CatTicket/Edit?idCategoriaTicket="+oElemento.IdCategoriaTicket)'" name="name" value="Actualizar" />
                        <input type="button" class="btn btn-default" onclick="jsDelete(@oElemento.IdCategoriaTicket);" name="name" value="Eliminar" />
                    </td>
                    
                </tr>
            }
        </table>
    </div>
</div>

<script>
    function jsDelete(idCategoriaTicket) {
        if (confirm("Seguro de que quieres eliminarlo?") ){
            url = "@Url.Content("~/CatTicket/Delete")"+"/"+idCategoriaTicket;
            $.post(url, function (data){
                if (data == "1") {
                    document.location.href = "@Url.Content("~/CatTicket/")"
                } else {
                    alert("Ocurrió un error :(")
                }
        })
        }
    }
</script>
