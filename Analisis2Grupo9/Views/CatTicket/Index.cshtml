@model List<Analisis2Grupo9.Models.TableViewsModels.categoriaTicketTableModel>

@{
    ViewBag.Title = "Categoría Ticket";
}

<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-12">
        <input type="button" class="btn btn-success" onclick="document.location.href = '@Url.Content("~/CatTicket/AddCat")'" value="Nuevo" />
    </div>
</div>
<br />
<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered">
            <tr>
                <td>#</td>
                <td>Codigo</td>
                <td>Nombre</td>
                <td>Acciones</td>

            </tr>
            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.IdCategoriaTicket</td>
                    <td>@oElemento.Codigo</td>
                    <td>@oElemento.Nombre</td>
                    <td>
                        <input type="button"
                               class="btn btn-danger"
                               onclick="jsDelete(@oElemento.IdCategoriaTicket);"
                               value="Eliminar" />

                        <input type="button"
                               class="btn btn-info"
                               onclick="document.location.href= '@Url.Content("~/CatTicket/Edit?idCategoriaTicket="+oElemento.IdCategoriaTicket)'"
                               value="Editar" />
                    </td>
                    
                </tr>
            }
        </table>
    </div>
</div>

<script>
    function jsDelete(idCategoriaTicket) {
        if (confirm("¿Desea eliminar este registro?") ){
            url = "@Url.Content("~/CatTicket/Delete")"+"/"+idCategoriaTicket;
            $.post(url, function (data){
                if (data == "1") {
                    document.location.href = "@Url.Content("~/CatTicket/")"
                } else {
                    alert("Ocurrió un error :(")
                }
        })
        }
    }
</script>
