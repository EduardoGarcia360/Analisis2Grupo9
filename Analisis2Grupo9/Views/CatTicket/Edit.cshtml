@model Analisis2Grupo9.Models.ViewModels.EditcatTicket
@{
    ViewBag.Title = "Editar Cat";
}

<h2>ViewBag.Title </h2>

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Edit", "CatTicket", FormMethod.Post, new { role = "form", @class = "" }))
        {
            @Html.HiddenFor(d=>d.Codigo)
            @Html.AntiForgeryToken()

            @Html.ValidationMessage("error", new { role = "form", @class = "text-danger" })

            @Html.LabelFor(d => d.Codigo)
            @Html.TextBoxFor(d => d.Codigo, new { @class = "form-control" })

            @Html.LabelFor(d => d.Nombre)
            @Html.TextBoxFor(d => d.Nombre, new { @class = "form-control" })

            @Html.LabelFor(d => d.Estado)
            @Html.TextBoxFor(d => d.Estado, new { @class = "form-control" })
            <div style="text-align: right">
                <input type="submit" class="btn btn-success" value="Guardar" />
            </div>
        }
    </div>
</div>