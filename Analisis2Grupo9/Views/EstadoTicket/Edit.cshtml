@model Analisis2Grupo9.Models.ViewModels.EditEstadoTicket

@{
    ViewBag.Title = "Editar Estado Ticket";
}

<h2>@ViewBag.Title</h2>


<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Edit", "EstadoTicket", FormMethod.Post, new { role = "form", @class = "" }))
        {
            @Html.HiddenFor(d => d.idEstadoTicket)
            @Html.AntiForgeryToken()

            @Html.ValidationMessage("error", new { role = "form", @class = "text-danger" })

            @Html.LabelFor(d => d.Nombre)
            @Html.TextBoxFor(d => d.Nombre, new { @class = "form-control" })

            <br />

            <div class="row">
                <div class="col" style="text-align:left">
                    <input type="button"
                           class="btn btn-danger"
                           onclick="document.location.href = '@Url.Content("~/EstadoTicket/Index")'"
                           value="Cancelar" />
                </div>
                <div class="col">
                    
                </div>
                <div class="col" style="text-align:right">
                    <input type="submit" class="btn btn-success" value="Guardar" />
                </div>
            </div>
        }
    </div>
</div>
