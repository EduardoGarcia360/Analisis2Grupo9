@model Analisis2Grupo9.Models.ViewModels.EstadoTicket

@{
    ViewBag.Title = "Agregar Estado Ticket";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("AddEstadoTicket", "EstadoTicket", FormMethod.Post, new { role = "form", @class = "" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationMessage("error", new { role = "form", @class = "text-danger" })



            @Html.LabelFor(d => d.Nombre)
            @Html.TextBoxFor(d => d.Nombre, new { @class = "form-control" })

            <br />
            <div style="text-align:left">
                <input type="button"
                       class="btn btn-danger"
                       onclick="document.location.href = '@Url.Content("~/EstadoTicket/Index")'" value="Cancelar" />
            </div>
            <div style="text-align: right">
                <input type="submit" class="btn btn-success" value="Guardar" />
            </div>
        }
    </div>
</div>

